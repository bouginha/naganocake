<h1>Admins::Products#edit</h1>
<p>Find me in app/views/admins/products/edit.html.erb</p>
<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">商品更新フォーム</h5>
      <div class="form-body p-4">
        <% if @product.errors.any? %>
          <%= @product.errors.count %>件のエラーが発生しました
          <% @product.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @product, local:true do |f| %>
           <%= attachment_image_tag @product, :image, class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :name, class:"form-control", placeholder:@product.name %>
          </div>
          <%= f.text_area :about, class:"form-control", rows:"3", placeholder:@product.about %>
          <%= f.text_field :normal_price, class:"form-control", placeholder:@product.normal_price %>
          <%= f.text_field :products_genre_id, class:"form-control", placeholder:@product.products_genre_id %>
          <hr>
          <%= f.submit '登録', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>