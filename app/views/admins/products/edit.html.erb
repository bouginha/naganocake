<h1>Admins::Products#edit</h1>
<p>Find me in app/views/admins/products/edit.html.erb</p>
<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">商品更新フォーム</h5>
      <div class="form-body p-4">


        <%= form_with model: @product, url: admins_product_path, local: true do |f| %>
        <div class="offset-sm-1 col-sm-3">
          <%= attachment_image_tag @product, :image, class: "w-100" %>
          </div>
          <div class="edit-group mb-3 mt-4">
            <label for="inputImage">商品画像</label>
            <%= f.attachment_field :image, placeholder: "商品画像" %>
          </div>
          <div class="edit-group">
            <label class="col-sm-2 control-label">商品名</label>
            <%= f.text_field :name, class:"form-control", placeholder:@product.name %>
          </div>

          <div class="edit-group">
            <label class="col-sm-2 control-label">商品詳細</label>
            <%= f.text_area :about, class:"form-control", rows:"3", placeholder:@product.about %>
          </div>

          <div class="edit-group">
            <label class="col-sm-2 control-label">税抜き価格</label>
            <%= f.text_field :normal_price, class:"form-control", placeholder:@product.normal_price %>
          </div>

          <div class="edit-group">
            <label class="col-sm-2 control-label">ジャンル</label>
            <%= f.collection_select :products_genre_id, ProductsGenre.all, :id, :name %>
          </div>

          <div class="edit-group">
            <label class="col-sm-2 control-label">販売ステータス</label>
            <%= f.select :is_active,{販売中:true, 販売停止:false} %>
          </div>

          <hr>
          <%= f.submit '登録', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>