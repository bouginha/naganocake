<h1>Admins::Products#show</h1>
<p>Find me in app/views/admins/products/show.html.erb</p>

<h2 class="head-line title_h2 text-center">商品詳細</h2>
<div class="row">
  <div class="col-xs-12">
    <div class="col-xs-4">
      <div id="img_field">
        <%= attachment_image_tag(@product, :image, size: "300x220", fallback: "no_image.jpg") %>
      </div>
    </div>
  <div class="col-xs-6">
    <div class="field">
      <p>
        商品名           <%= @product.name %>
      </p>
    </div><br>
    <div class="field">
      <p>
        商品説明        <%= @product.about %>
      </p><br>
    </div>
    <div class="field">
      <p>
        ジャンル        <%= @product.products_genre_id %>
      </p><br>
    </div>
    <div class="field">
      <p>
        税込価格(税抜価格)        <%= @product.normal_price %>(<%= (@product.normal_price * 1.1).floor %>)円
      </p><br>
    </div>
    <div class="field">
      <p>
        販売ステータス
          <% if @product.is_active == true %>
            <i class="fas fa-bullseye red"></i>販売中
          <% elsif @product.is_active == false %>
            <i class="fas fa-bullseye blue"></i>販売停止中
          <% end %>
      </p>
    </div>
    <%= link_to edit_admins_product_path(@product.id) do%>
      <label class="btn btn-info">編集する</label>
    <% end %>
  </div>
</div>

