<h1>Admins::Admins#show</h1>
<p>Find me in app/views/admins/admins/show.html.erb</p>
<div class="container">
  <h2><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h2><br>

  <table class="table">
	  <tr>
      <th>顧客ID</th>
      <td><%= @member.id %>
      <% if @member.is_deleted == "有効" %>
        <div class="label label-primary">有効会員</div>
      <% else %>
        <div class="label label-danger">退会済み</div>
      <% end %>
      </td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @member.last_name %><%= @member.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @member.last_name_kana %><%= @member.last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @member.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @member.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @member.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @member.email %></td>
    </tr>
  </table>
    <%= link_to "編集する",  edit_admins_admin_path(@member.id), class:"btn btn-primary" %>
    <%= link_to "注文履歴一覧", admins_homes_top_path(@member.id), class:"btn btn-primary" %>
</div>