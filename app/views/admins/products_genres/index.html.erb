<h1>Admins::ProductsGenres#index</h1>
<p>Find me in app/views/admins/products_genres/index.html.erb</p>

<div class="container">
  <div class="row">


    <div class="col-md-8 offset-md-1">
      
            
          <table class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">商品登録フォーム</h5>
      <div class="form-body p-4">


  <%= render 'layouts/error', model: @products_genre_new %>
        
        <%= form_with model: @products_genre_new,url: admins_products_genres_path, local:true do |f| %>


          <div class="input-group mb-3 mt-4">
            <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
          </div>

          <hr>
              <%= f.submit '登録', class:"btn btn-lg btn-block btn-info mt-4" %>
          </hr>
        <% end %>
          
      </div>
    </table>
<h2>ジャンル一覧</h2>

 
 
<table class="table table-inverse">
      <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <% @products_genre.each do |products_genre| %>
        <tr>

          <td>
            <p><%= products_genre.id%></p>
          </td>
          <td>
            <p><%= products_genre.name%></p>
          </td>
          <td>
            <%= link_to edit_admins_products_genre_path(products_genre) do %>
              <p class="btn btn-success">edit</p>
            <% end %>
          </td>
        </tr>

      <% end %>
      </table>

     </div>
  </div>
</div>