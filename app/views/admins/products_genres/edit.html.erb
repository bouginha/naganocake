<div class="container">
  <div class="row">
        <div class="col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h2>ジャンル編集</h2>
       <div class="form-body p-4">
                <%= render '/layouts/error', model: @products_genre %>
    <div class="genre-edit">
      <!--ジャンル追加-->
      <%= form_for [:admins, @products_genre] do |f| %>
      <!--ジャンル名-->
        <div class="genre-edit">
        <%= f.label :name, "ジャンル", class: "genre-form" %>
        </div>
        <div class="genre-edit">
        <%= f.text_field :name , class: "genre-form" %>
        </div>
        <div class="genre-edit">
      <!--有効無効-->
        <%= f.radio_button :is_deleted, :true, checked: true, class: "genre-form" %>
        <%= f.label :is_deleted, "有効",class: "genre-form" %>
        <%= f.radio_button :is_deleted, :false, checked: false, class: "genre-form" %>
        <%= f.label :is_deleted, "無効",class: "genre-form" %>
        </div>
      <!--追加-->
        <%= f.submit "変更を保存する", class:"btn btn-info" %>
      <% end %>
      </div>
    </div>
       </div>
  </div>
</div>

