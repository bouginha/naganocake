<h1>Admins::Orders#show</h1>
<p>Find me in app/views/admins/orders/show.html.erb</p>

<div class="row" style="width:60%; margin:0 auto;">
<%= form_for(@order, url:admins_order_path(@order), method: :patch) do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文詳細画面</h4>

	<table class="table table-bordered">
		<tr>
			<th>注文者名</th>
			<td><%= link_to  admins_admin_path(@member.id) do %>
					<%= @order.member.last_name %>
					<%= @order.member.first_name %>
					<% end %>
			</td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.postal_code %>
					<%= @order.address %>
					<br>
					<%#= @order.last_name %>
					<%#= @order.first_name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%if @order.payment_method==0%>
	    <p>クレジット払い</p>
      <%else%>
      <p>銀行振り込み</p>
      <%end%></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td>
				<%=f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
				<%= f.submit "更新" %>
			</td>
		</tr>
		<% end %>


<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>個数</th>
			<th>単価</th>
			<th>商品小計</th>
			<th>製作ステータス</th>
		  <% @ordered_products.each do |ordered_product| %>
		</tr>
		<tr>
		<%= form_for(ordered_product, url:admins_order_path(ordered_product), method: :patch) do |f| %>
			<td><%= ordered_product.name %></td>
			<td><%= ordered_product.quantity %></td>
			<td><%= ordered_product.price%></td>
			<td><%#= %>円</td>
			<td>
				<%=f.select :production_status, OrderedProduct.production_statuses.keys.map {|k| [I18n.t("enums.ordered_product.production_status.#{k}"), k]} %>
				<%= f.submit "更新" %>
				</td>
				<% end %>
		</tr>
		<% end %>
	</table>







