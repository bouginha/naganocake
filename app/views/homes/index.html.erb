<h2>検索結果</h2>

<table class="table table-hover table-inverse">

  <thead>
    <tr>
     
     <th>商品イメージ</th>
     <th>商品名</th>
     <th>販売ステータス</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @products.each do |product| %>
      <%if product.is_active%>
       <tr>
        <td>
         <%= link_to() do %>
         <%= attachment_image_tag(product, :image, :fill, 50, 50) %>
         <% end %>
        </td>
        <td>
         <%= link_to product.name, product, class: "product_#{product.id}" %> 
        </td>
       </tr>
      <%end%>
     <% end %>
  </tbody>


 </table>