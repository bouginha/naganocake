<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>
<div class="container">
  <div class="row">

    <div class="col-3 mt-4 ">
      <div class="offset-1 col-10">
        <div class="row d-flex aline-items-center">
          <strong class="red-border px-3 pb-1">ジャンル検索</strong>
        </div>

    <span class="brown-border text-center"><%= link_to "すべての商品", products_path %></span>

        <% @products_genre.each do |products_genre| %>
          <%= link_to products_genre_path(products_genre.id) do %>
            <div class="row mx-auto mt-3">
              <span class="brown-border text-center"><%= products_genre.name%></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-7 offset-md-1">
      <h2>商品一覧</h2>

      <table class="table table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>詳細</th>
            <th>値段</th>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @products.each do |product| %>
          <%if product.is_active%>
            <tr>
              <td>
                <%= attachment_image_tag product, :image, :fill, 60, 60, fallback: "no_image.jpg",size:"40x40"  %>
              </td>
              <td>
                <%= link_to product_path(product) do %>
                    <p><%= product.name%></p>
                <% end %>
              </td>
              <td>
                <p><%= product.about%></p>
              </td>
              <td>
                <p><%= product.normal_price%></p>
              </td>
              <td>
                <p><%= product.products_genre.name%></p>
              </td>
            </tr>
    
          <%end%>
        <%end %>
      </table>
     </div>
  </div>
</div>
