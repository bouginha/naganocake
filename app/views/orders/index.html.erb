<div class="container">
	<h2>注文履歴一覧</h2>
	  <table class="table-bordered">
	    <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払金額</th>
        <th>ステータス</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td><%= order.total_fee %></td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </table>
</div>