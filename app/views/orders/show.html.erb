<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
<div calss="row">
  <% if @order.present? %>
    <div class="col-xs-8">
      <strong><i class="far fa-user"></i>注文情報</strong>
        <table class="table table-bordered table-condensed">
          <tbody>
              <tr>
                <th class="info">注文日</th>
                <td class="text-left"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
              　<th class="info">配送先</th>
                <td class="text-left"><%= @order.postal_code %><br>
                	  <%= @order.address %><br>
                	  <%= @order.name %>
                </td>
              </tr>
              <tr>
              　<th class="info">支払方法</th>
                <td class="text-left"><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th class="info">ステータス</th>
                <td class="text-left"><%= @order.received_status %></td>
              </tr>
          </tbody>
        </table>
    </div>

    <div class="col-xs-3 col-xs-offset-1 billing">
      <strong><i class="fas fa-yen-sign"></i>請求情報</strong>
        	<table class="table  table-bordered table-condensed">
            <tr>
              <th class="info">商品合計</th>
              <td class="text-right col-xs-5"><%= total_price(@order_details).to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info">配送料</th>
              <td class="text-right col-xs-5"><%= @order.postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info">ご請求金額</th>
              <td class="text-right col-xs-5"><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-7 order-details">
      <strong><i class="fas fa-store"></i>注文内容</strong>
        <table class="table table-striped table-bordered table-condensed">
        	<thead>
          <tr class="info">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
            </thead>
            <tbody>
            <% @ordered_product.each do |ordered_product| %>
          <tr>
            <td><%= ordered_product.product.name %></td>
            <td class="text-right"><%= tax_price(ordered_product.product.tax_out_price).to_s(:delimited) %>円</td>
            <td class="text-right"><%= ordered_product.quantity %></td>
            <td class="text-right"><%= sub_price(ordered_product).to_s(:delimited) %>円</td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <% if member_signed_in? %>
      <%= link_to "注文履歴一覧へ戻る", members_orders_path, class: "btn btn-info btn-lg order-index-back" %>
    <% else %>
      <%= link_to "会員詳細へ戻る", admin_member_path, class: "btn btn-info order-index-back" %>
    <% end %>
  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>
</div>

